# Конфигурация окружения
ENVIRONMENT=development  # sandbox или production

# Токены Tinkoff API
TINKOFF_SANDBOX_TOKEN=your_sanbox_token_here
TINKOFF_PROD_TOKEN=your_prod_token_here
TINKOFF_ACCOUNT_ID=

# Конфигурация базы данных
DB_HOST=localhost
DB_PORT=5432
DB_NAME=forex_db
DB_USER=forex_user
DB_PASSWORD=forex_pass

# Конфигурация Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Параметры торговли
INITIAL_BALANCE=10000
RISK_PER_TRADE=0.02  # 2% от баланса
MAX_OPEN_TRADES=5
